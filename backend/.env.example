# Database
DATABASE_URL="postgresql://postgres:password@localhost:54322/postgres"
DIRECT_URL="postgresql://postgres:password@localhost:54322/postgres"

# Supabase
SUPABASE_URL="https://xxx.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
# Optional: for legacy HS256 tokens. If using Supabase JWT Signing Keys (ECC/ES256), JWKS is used automatically via SUPABASE_URL.
SUPABASE_JWT_SECRET="your-jwt-secret"

# Frontend URL (for CORS and redirects)
FRONTEND_URL="http://localhost:3000"

# Email Service (Resend or SendGrid)
RESEND_API_KEY="re_..."
# Or use SendGrid:
# SENDGRID_API_KEY="SG..."

# SMS Service (Twilio or Africa's Talking)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1234567890"
# Or use Africa's Talking:
# AFRICASTALKING_API_KEY="..."
# AFRICASTALKING_USERNAME="..."

# Application
NODE_ENV="development"
PORT="3001"
API_VERSION="v1"

# Master Admin: comma-separated emails that can access Site Admin (in addition to DB is_master_admin)
# MASTER_ADMIN_EMAILS="admin@example.com,other@example.com"
MASTER_ADMIN_EMAILS=""

# Monitoring
SENTRY_DSN="https://...@sentry.io/..."

# Rate Limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_LIMIT="100"
